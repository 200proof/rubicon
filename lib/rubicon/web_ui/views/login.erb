<form action="/login" method="post" class="form-signin">
  <%= flash_messages %>
  <h2 class="form-signin-heading">Please sign in to continue...</h2>
  <input type="text" class="input-block-level" name="login[username]" placeholder="Username">
  <input type="password" class="input-block-level" name="login[password]" placeholder="Password">
  <button class="btn btn-large btn-primary" type="submit">Sign in</button>
</form>