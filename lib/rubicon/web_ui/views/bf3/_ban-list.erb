<div class="row">
    <div class="span12">
        <table class="table table-striped table-hover table-border ban-list" id="ea-ban-list">
            <caption>Banned Players &mdash; click a ban to remove it</caption>
            <thead>
                <th>ID</th>
                <th>Expires</th>
                <th>Reason</th>
            </thead>
            <tbody class="loading-row">
                <tr>
                    <td colspan="3">Loading</td>
                </tr>
            </tbody>
            <tbody data-bind="foreach: banList.entries">
                <tr data-bind="click: function() { $root.banList.openBanModal($data) }">
                    <td data-bind="text: friendly_id"></td>
                    <td data-bind="text: expires"></td>
                    <td data-bind="text: reason"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="fade" data-bind="modal: banList.currentModalBan">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Delete ban</h3>
    </div>
    <div class="modal-body">
        <p>Are you sure you want to delete this ban?</p>
        <p data-bind="text: id"></p>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal">No, go back</button>
        <button type="button" class="btn btn-danger" data-bind="click: function() { $root.banList.removeBan($data); }">Yes, unban this player</button>
    </div>
</div>