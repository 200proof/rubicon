<div class="row">
    <span class="span12 text-center" style="padding-bottom: 16px">Reserved Slots &mdash; click a name to remove it</span>
    <div class="span12 loading-row">Loading...</div>
    <div class="span12">
        <div id="reserved-list-entries" class="row">
            <div class="span3 reserved-slot-entry" id="new-slot">
                <input type="text" name="new-slot-name" placeholder="Type in a name and press enter..." maxlength="16" class="player-name" />
            </div>
            <!-- ko foreach: reservedList.entries -->
                <div class="span3 reserved-slot-entry" data-bind="text: $data, click: function() { $root.reservedList.openRemoveModal($data) }">
                </div>
            <!-- /ko -->
        </div>
    </div>
</div>
<div class="fade" data-bind="modal: reservedList.currentModalSlot">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Delete reserve slot</h3>
    </div>
    <div class="modal-body">
        <p>Are you sure you want to remove this reserved slot?</p>
        <p data-bind="text: $data"></p>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal">No, go back</button>
        <button type="button" class="btn btn-danger" data-bind="click: function() { $root.reservedList.removeSlot($data); }">Yes, remove this slot</button>
    </div>
</div>