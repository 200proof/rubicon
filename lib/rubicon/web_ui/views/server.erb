<h1><%= server.name %></h1>

<table class="table table-striped table-hover table-border">
    <thead>
        <th>Name</th>
        <th>Kills</th>
        <th>Deaths</th>
        <th>Score</th>
        <th>Ping</th>
        <th>Actions</th>
    </thead>
    <tbody>
        <% server.players.each_value.sort { |a, b| b.score <=> a.score }.each do | player| %>
        <tr>
            <td><i class="sprite sprite-rank-<%=player.rank%>"></i> <%= player.name %></td>
            <td><%= player.kills %></td>
            <td><%= player.deaths %></td>
            <td><%= player.score %></td>
            <td><%= player.ping %></td>
            <td>
                <button class="btn btn-mini btn-info" style="width: 32%">Message</button>
                <button class="btn btn-mini btn-warning" style="width: 32%">Kick</button>
                <button class="btn btn-mini btn-danger" style="width: 32%">Ban</button>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<script src="/javascripts/server.js"></script>